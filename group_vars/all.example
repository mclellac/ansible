---
ec2_access_key: "{{ lookup('env', 'AWS_ACCESS_KEY_ID') }}"
ec2_secret_key: "{{ lookup('env', 'AWS_SECRET_ACCESS_KEY') }}"
ec2_region: 
ec2_zone: 
ec2_image: 
ec2_instance_type: 
ec2_keypair: 
ec2_security_group: default
ec2_instance_count:

#-- common role variables --
group_add:
  - gid: 10000
    group_name: users
  - gid: 11000
    group_name: sysadmins
users:
  - username: doej
    name: "John Doe"
    uid: "10000"
    password: "$1$saltrrp$ijEj.FdgvHCEr9.LRy4Gb9Urd."
    shell: "/bin/bash"
    authorized_keys: []
    state: present
  - username: janed
    name: "Jane Doe"
    uid: "20002"
    password: "$1$saltrrp$ijEj.FdgvHCEr9.LRy4Gb9Urd."
    shell: "/bin/zsh"
    authorized_keys: []
    state: present
users_group: users
users_groups: [ "sysadmins" ]
removable_users:
  - games
  - gnats
  - irc
  - list
  - news
  - proxy
  - uucp
removable_groups:
  - games
  - gnats
  - irc
  - list
  - news
  - proxy
  - uucp
nologin_users:
  - backup
  - bin
  - daemon
  - libuuid
  - lp
  - mail
  - man
  - nobody
  - sys

#-- wordpress, nginx, and mysql variables --#
# Which version of WordPress to deploy
wp_version: 4.1.1
wp_sha256sum: 618ac08c2be3959b37f4ee0006558da65b7a4bca19bfb4b86ea60e5d53043ee9

# These are the WordPress database settings
wp_db_name: wordpress
wp_db_user: wordpress
wp_db_password: secret

# You shouldn't need to change this.
mysql_port: 3306

# This is used for the nginx server configuration, but access to the
# WordPress site is not restricted by a named host.
server_hostname: www.example.com

# Disable All Updates
# By default automatic updates are enabled, set this value to true to disable all automatic updates
auto_up_disable: false

#Define Core Update Level
#true  = Development, minor, and major updates are all enabled
#false = Development, minor, and major updates are all disabled
#minor = Minor updates are enabled, development, and major updates are disabled
core_update_level: true
